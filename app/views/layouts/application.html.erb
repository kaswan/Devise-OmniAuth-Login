<!DOCTYPE html>
<html>
<head>
  <title>Memamoru</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>


<body>

<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Me-Mamoru', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
          <li><%= link_to 'プロフィール変更', edit_user_registration_path %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Yahoo Login!', user_yahoojp_omniauth_authorize_path %></li>
          <li><%= link_to 'Google+', user_google_omniauth_authorize_path %></li>
          <li><%= link_to 'Facebook', user_facebook_omniauth_authorize_path %></li>
          <li><%= link_to "サインイン", new_user_registration_path %></li>
      		<li><%= link_to "ログイン", new_user_session_path %></li>          
        </ul>
      <% end %>
      
    </div>
  </div>
</nav>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <%= yield %>
</div>

</body>


</html>
